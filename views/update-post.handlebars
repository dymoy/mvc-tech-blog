<div class="d-flex justify-content-start w-100">
    <a href="/dashboard" class="back-btn mt-3 text-light" type="button"> &#60; Back to Dashboard</a>
</div>
<div class="card">
    <div class="card-header d-flex justify-content-start">
        <h2 class="title">Update Post</h2><hr>
    </div>
    <div class="card-body">
        <form class="form update-post-form">
            <div class="mt-2">
                <label for="post-title">Title</label>
                <br>
                <input class="input w-100" type="text" id="post-title" name="post-title" value="{{post.title}}"/>
            </div>
            <div class="mt-3">
                <label for="post-content">Content</label>
                <br>
                <textarea class="input w-100" type="text" id="post-content" name="post-content">{{post.content}}</textarea>
            </div>
            <div class="user-options d-flex flex-direction-col justify-content-evenly">
                <button type="submit" class="button col-md-5 mt-3 mb-2">Update Post</button>
                <button type="button" class="button col-md-5 mt-3 mb-2 delete-post-btn">Delete Post</button>
            </div>
        </form>
    </div>
</div>  

