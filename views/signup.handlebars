<div class="card signup-card">
    <div class="card-header d-flex justify-content-center">
        <h4 class="title my-auto">Sign Up</h4>
    </div>
    <div class="card-body">
        <form class="form signup-form text-center">
			<div class="form-group my-2">
				<label for="name-signup">Username:</label>
				<input class="form-input" type="text" id="name-signup" />
			</div>
			<div class="form-group my-2">
				<label for="email-signup">Email:</label>
				<input class="form-input" type="text" id="email-signup" />
			</div>
			<div class="form-group my-2">
				<label for="password-signup">Password:</label>
				<input class="form-input" type="password" id="password-signup" />
			</div>
			<div class="form-group user-options d-flex flex-direction-col justify-content-evenly">
                <button type="submit" class="button col-md-7 mt-3 mb-2">Submit</button>
            </div>
    	</form>
        <div class="mt-3">
			<a href="/login" id="signup-option">Login Instead</a>
		</div>
    </div>
</div>  

<script src="./js/signup.js"></script>
