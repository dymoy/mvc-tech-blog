<div class="card login-card">
    <div class="card-header d-flex justify-content-center">
        <h4 class="title my-auto">Login</h4>
    </div>
    <div class="card-body">
        <form class="form login-form text-center">
			<div class="form-group my-2">
				<label for="email-login">Email:</label>
				<input class="form-input" type="text" id="email-login" />
			</div>
			<div class="form-group my-2">
				<label for="password-login">Password:</label>
				<input class="form-input" type="password" id="password-login" />
			</div>
			<div class="form-group user-options d-flex flex-direction-col justify-content-evenly">
                <button type="submit" class="button col-md-7 mt-3 mb-2">Submit</button>
            </div>
    	</form>
		<div class="mt-3">
			<a href="/signup" id="signup-option">Sign Up Instead</a>
		</div>
    </div>
</div>  

<script src="./js/login.js"></script>
